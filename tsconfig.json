{
  "extends": "@meza/tsconfig-base",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "jsx": "react",
    "tsBuildInfoFile": "./.cache/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
